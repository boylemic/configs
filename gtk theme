	engine "murrine" {
	    roundness = 0
	    highlight_shade     = 1.04
	}
}

style "murrine-separator-menu-item"
{
	GtkSeparatorMenuItem::horizontal-padding = 0
	GtkWidget::wide-separators = 1
	GtkWidget::separator-width = 1
	GtkWidget::separator-height = 1
	xthickness = 1
	ythickness = 0

	engine "murrine" {
	    roundness = 0
	    highlight_shade     = 1.04
	}

}

style "murrine-panel" {
	xthickness = 3
	ythickness = 3
	bg[NORMAL]        = "#000000"
	bg[PRELIGHT]     = shade (1.8, @bg_color)
	bg[ACTIVE]       = "#000000"
	fg[NORMAL]        = @fg_color
	fg[PRELIGHT]      = @fg_color
	fg[ACTIVE]        = @fg_color
	engine "murrine" {
	roundness = 0
	rgba = TRUE
	highlight_ratio = 1.2
	reliefstyle	    = 2
	contrast = 0.9
	lightborderstyle    = 1
	lightborder_ratio   = 1.1
	}
}


